<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color"
        >

        <ImageView
            android:id="@+id/slider"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/img_onboard2"
            app:layout_constraintBottom_toTopOf="@id/tv_remove_bg"
            android:layout_marginBottom="@dimen/_7sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_remove_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/outfit_semibold"
            android:gravity="center"
            android:text="@string/turn_text_into_voice"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintBottom_toTopOf="@id/btnNextOnboarding"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/outfit_semibold"
            android:text="@string/next"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            android:background="@drawable/bg_rounded_constraintlayout_gradient"
            android:layout_marginVertical="@dimen/_2sdp"
            android:id="@+id/btnNextOnboarding"
            android:paddingVertical="@dimen/_5sdp"
            android:paddingHorizontal="@dimen/_9sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            app:layout_constraintHorizontal_bias="0.98"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/nativeAdView"
            />




        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutViews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="@id/btnNextOnboarding"
            app:layout_constraintBottom_toBottomOf="@id/btnNextOnboarding"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            >

            <View
                android:id="@+id/view1"
                android:layout_width="@dimen/_5sdp"
                android:layout_height="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/circular_background"
                android:backgroundTint="@color/unselected_color"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="@dimen/_10sdp"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view2"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/bg_constraint_btn"
                android:backgroundTint="@color/blue1"
                app:layout_constraintBottom_toBottomOf="@id/view1"
                app:layout_constraintLeft_toRightOf="@id/view1" />

            <View
                android:id="@+id/view3"
                android:layout_width="@dimen/_5sdp"
                android:layout_height="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/circular_background"
                android:backgroundTint="@color/unselected_color"
                app:layout_constraintLeft_toRightOf="@id/view2"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:visibility="gone"
                android:id="@+id/view4"
                android:layout_width="@dimen/_5sdp"
                android:layout_height="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/bg_constraint_btn"
                android:backgroundTint="@color/blue1"
                app:layout_constraintBottom_toBottomOf="@id/view3"
                app:layout_constraintLeft_toRightOf="@id/view3" />

        </androidx.constraintlayout.widget.ConstraintLayout>



        <FrameLayout
            android:id="@+id/nativeAdView"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>