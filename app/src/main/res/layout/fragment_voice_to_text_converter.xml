<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:paddingHorizontal="@dimen/_10sdp"
    tools:context="com.voicechanger.funnysound.ui.home.HomeFragment">





    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:src="@drawable/ic_cross_white"
        android:paddingVertical="@dimen/_10sdp"
        android:paddingEnd="@dimen/_5sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:src="@drawable/ic_home"
        android:paddingVertical="@dimen/_10sdp"
        android:paddingStart="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/outfit_semibold"
        android:text="@string/your_text_is_ready"
        android:textColor="@color/white"
        android:textSize="@dimen/_15ssp"
        android:layout_marginTop="@dimen/_10ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back"
        />


    <TextView
        android:id="@+id/tv_text"
        android:layout_width="0dp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:maxLines="5"
        android:gravity="top"
        android:background="@drawable/bg_edittext"
        android:padding="@dimen/_5sdp"
        android:fontFamily="@font/outfit_regular"
        android:textColor="@color/unselected_color"
        android:textColorHint="@color/unselected_color"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent=".50"
        android:orientation="vertical"/>

    <TextView
        android:id="@+id/btn_copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
       android:text="@string/copy"
        android:fontFamily="@font/outfit_medium"
        android:textColor="@color/white"
        android:drawableStart="@drawable/ic_copy_20"
        android:drawablePadding="@dimen/_5sdp"
        android:background="@drawable/bg_rounded_constraintlayout"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_6sdp"
        android:textSize="@dimen/_9ssp"
        app:layout_constraintEnd_toStartOf="@id/guide"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/tv_text"/>


    <TextView
        android:id="@+id/btn_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/share"
        android:fontFamily="@font/outfit_medium"
        android:textColor="@color/white"
        android:drawableStart="@drawable/ic_share_20"
        android:drawablePadding="@dimen/_5sdp"
        android:background="@drawable/bg_rounded_constraintlayout"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_6sdp"
        android:textSize="@dimen/_9ssp"
        app:layout_constraintStart_toEndOf="@id/guide"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/tv_text"/>


</androidx.constraintlayout.widget.ConstraintLayout>