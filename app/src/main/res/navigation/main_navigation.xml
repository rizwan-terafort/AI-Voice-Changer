        tools:layout="@layout/fragment_input_text"/>



    <fragment
        android:id="@+id/voice_to_text_fragment"
        android:name="com.voicechanger.funnysound.ui.voice_to_text.VoiceToTextFragment"
        tools:layout="@layout/fragment_voice_to_text">

    </fragment>


    <action
        android:id="@+id/action_global_to_voice_effect_fragment"
