<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AIBeautyVisualCreator" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>



    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/unselected_color</item>
        <item name="android:textColorPrimary">@color/unselected_color</item>
        <item name="android:statusBarColor">@color/bg_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:windowBackground">@color/white</item>



    </style>

    <style name="bottomNavigationView">
        <item name="colorSecondaryContainer">@color/transparent</item>
        <item name="fontFamily">@font/outfit_regular</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:fontFamily">@font/outfit_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!-- Custom TextAppearance for Toolbar title -->
    <style name="collapsingtoolbar" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/_18ssp</item> <!-- Set the desired text size -->
        <item name="android:fontFamily">@font/outfit_bold</item> <!-- Set the desired font family -->
        <item name="android:textColor">@color/white</item> <!-- Set text color -->
    </style>

</resources>